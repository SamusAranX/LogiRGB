<Window x:Class="LogiRGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogiRGB"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="LogiRGB" Height="400" Width="240">
    <Grid>
		
		<StackPanel>
			<Button x:Name="button" Click="button_Click" Content="Exit"/>
			<Button x:Name="buttonS" Click="button_SetColor" Content="SetColor"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<TextBox x:Name="tbR" Text="255" />
				<TextBox x:Name="tbG" Grid.Column="1" Text="127" />
				<TextBox x:Name="tbB" Grid.Column="2" Text="0" />
			</Grid>
			<Image x:Name="image" Height="200" Width="200"/>
			<Grid Width="200" Height="100">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition />
				</Grid.ColumnDefinitions>
				<Border x:Name="color1" Grid.Column="0" />
				<Border x:Name="color2" Grid.Column="1" />
				<Border x:Name="color3" Grid.Column="2" />
				<Border x:Name="color4" Grid.Column="3" />
			</Grid>
		</StackPanel>

	</Grid>
</Window>
