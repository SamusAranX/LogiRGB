<Application x:Class="LogiRGB.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:tb="http://www.hardcodet.net/taskbar"
			 xmlns:my="clr-namespace:LogiRGB"
             xmlns:local="clr-namespace:LogiRGB"
			 ShutdownMode="OnExplicitShutdown"
			 Startup="Application_Startup" Exit="Application_Exit">

	<Application.Resources>
		<ResourceDictionary>
			<my:ShowWindowCommand x:Key="showWindowCommand" />

			<tb:TaskbarIcon x:Key="taskbarIcon" IconSource="Images/LogiRGB.ico" ToolTip="what" DoubleClickCommand="{StaticResource showWindowCommand}">
				<!--<tb:TaskbarIcon.ContextMenu>
					
				</tb:TaskbarIcon.ContextMenu>-->
			</tb:TaskbarIcon>

			<!--<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Styles/AdobeSlider.xaml" />
			</ResourceDictionary.MergedDictionaries>-->
		</ResourceDictionary>
	</Application.Resources>
</Application>
