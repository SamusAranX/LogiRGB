<Window x:Class="LogiRGB.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogiRGB" UseLayoutRounding="True"
        mc:Ignorable="d" Loaded="Window_Loaded" Closing="Window_Closing" Topmost="True"
        Title="LogiRGB Settings" Height="426" Width="240">
	<Window.Resources>
		<DropShadowEffect x:Key="dropshadow" BlurRadius="0" Color="#000000" Opacity="0.5" Direction="270" RenderingBias="Quality" ShadowDepth="1" />
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="128" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>

		<UniformGrid Grid.Row="0" Height="128" Rows="2" Columns="2">
			<Border Margin="4" Background="#FFB62222" Effect="{StaticResource dropshadow}" CornerRadius="4" Grid.Column="0" x:Name="color1"/>
			<Border Margin="4" Effect="{StaticResource dropshadow}" CornerRadius="4" Grid.Column="1" x:Name="color2"/>
			<Border Margin="4" Effect="{StaticResource dropshadow}" CornerRadius="4" Grid.Column="2" x:Name="color3"/>
			<Border Margin="4" Effect="{StaticResource dropshadow}" CornerRadius="4" Grid.Column="3" x:Name="color4"/>
		</UniformGrid>

		<Slider x:Name="SliderR" Grid.Row="2" Value="255" Maximum="255" />
		<Slider x:Name="SliderG" Grid.Row="3" Value="127" Maximum="255" />
		<Slider x:Name="SliderB" Grid.Row="4" Maximum="255" />

		<Button Content="Save Settings" Grid.Row="5" Click="SaveTest_Click" />
		<Button Content="Load Settings" Grid.Row="6" Click="LoadTest_Click" />

		<Button Content="Set Colors" Grid.Row="8" Click="SetColorTest_Click" />
		<Button Content="Pulse Colors" Grid.Row="9" Click="PulseColorTest_Click" />
	</Grid>
</Window>
